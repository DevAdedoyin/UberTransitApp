<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassengerActivity" >

    <Button
        android:id="@+id/btnRequestCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R equest a Car"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/btnBeepBeep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beep Beep"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/btnLogoutFromPassengerActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout from App"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="#fff"/>


</fragment>

</LinearLayout>